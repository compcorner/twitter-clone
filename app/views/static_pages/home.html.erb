<%= secure_javascript_tag do %>
  alert("Hello!");
<% end %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/tweet_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Timeline</h3>
      <%= render 'shared/timeline' %>
    </div>
  </div>
<% else %>
  <div class='center hero-unit'>
    <h1>Twitter</h1>
    <h2>What's on your mind?</h2>
    <%= link_to 'Create an account', signup_path, class: 'btn btn-large btn-primary' %>
  </div>
<% end %>
